<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mind2"
        app:civ_border_color="@color/card_color_left"
        app:civ_border_width="3dp"
        app:civ_shadow="true"
        android:cropToPadding="true"
        android:id="@+id/imageViewCir2"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/assistantCardItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        app:barrierAllowsGoneWidgets="false"
        app:cardBackgroundColor="@color/card_color_right"

        android:layout_toLeftOf="@id/imageViewCir2"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/AssistantChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:textColor="#f9fbe7"
            android:textDirection="anyRtl"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
   </RelativeLayout>
